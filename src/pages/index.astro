---
import Base from "../layouts/Base.astro";
import { getCollection } from "astro:content";

const pageTitle = "Meaning Alignment Institute";

// Get blog posts from the writing collection
const allPosts = await getCollection("writing");

// Sort posts by publication date (newest first)
const sortedPosts = allPosts.sort((a, b) => {
  const dateA = new Date(a.id.substring(0, 6));
  const dateB = new Date(b.id.substring(0, 6));
  return dateB.getTime() - dateA.getTime();
});

// Identify two posts to pin (first two)
const pinnedPosts = sortedPosts.slice(0, 2);
const remainingPosts = sortedPosts.slice(2);
---

<style>
  .content-grid section {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 2rem;
    margin-bottom: 6rem;
    align-items: baseline;
  }

  .section-header {
    margin: 0;
    align-self: flex-start;
  }

  .section-content {
    margin: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  .section-content h3 {
    margin: 1.5rem 0 0.5rem 0;
    font-size: 1em;
    font-weight: normal;
  }

  .section-content p {
    margin: 0 0 1rem 0;
  }

  .two-column {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  @media screen and (max-width: 768px) {
    .content-grid section {
      grid-template-columns: 1fr;
    }

    .section-header {
      margin-bottom: 0.5rem;
    }

    .two-column {
      grid-template-columns: 1fr;
    }
  }

  .post-scroll {
    grid-column: 1 / -1;
    display: flex;
    gap: 1rem;
    padding-bottom: 1rem;
    margin: 1rem 0;
    overflow-y: visible;
    position: relative;
    width: 100%;

    /* Create scrolling without visual cutoff */
    overflow-x: scroll;
    scrollbar-width: none;
    -ms-overflow-style: none;
    mask-image: linear-gradient(to right, black 90%, transparent 100%);
    -webkit-mask-image: linear-gradient(to right, black 90%, transparent 100%);
  }

  .post-scroll:after {
    content: "";
    padding-right: 50px;
  }

  .post-scroll::-webkit-scrollbar {
    display: none;
  }

  /* Remove hidden overflow from parent containers */
  body,
  html,
  .content-grid {
    overflow-x: visible;
  }

  /* Allow section to visually extend beyond boundaries */
  section {
    overflow: visible;
  }

  .post-card {
    background-color: #ededed;
    color: #000;
    min-width: 240px;
    height: 320px;
    flex: 0 0 auto;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
    text-decoration: none;
  }

  .post-card h3 {
    font-size: 1.5rem;
    margin: 0;
  }

  .post-label {
    font-style: italic;
    margin-bottom: 0.5rem;
  }

  .post-tags {
    font-size: 0.9rem;
    opacity: 0.7;
  }

  .people-list {
    list-style-type: none;
    padding: 0;
    margin: 0 0 var(--space-standard) 0;
  }

  .people-list li {
    position: relative; /* For positioning the hover card */
    margin-bottom: calc(var(--space-standard) / 3);
    cursor: pointer; /* Indicates the item is interactive */
  }

  /* Add specific styling for research network list */
  .research-network {
    display: block;
    margin-bottom: var(--space-standard);
  }

  .research-network li {
    display: inline;
    /* margin-right: 0.5em; */
  }

  .research-network li:after {
    content: ", ";
    /* margin-left: 0.5em; */
  }

  .research-network li:last-child:after {
    content: "";
  }
</style>

