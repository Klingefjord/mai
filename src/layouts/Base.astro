---
const { pageTitle, txtColor, bgColor, txtColorDark, bgColorDark } = Astro.props;
---

<html lang="en">
  <head>
    <!-- Core Meta -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="title" content="Meaning Alignment Institute" />
    <meta name="description" content="" />
    <title>{pageTitle}</title>

    <!-- Basic Favicon and PWA/bookmark Info -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" type="image/png" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/appicon.png" />
    <link rel="mask-icon" href="/favicon.svg" color="#000000" />

    <!-- Geist Mono Font Preloading -->
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href="/geist/webfonts/GeistMono-Regular.woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href="/geist/webfonts/GeistMono-Medium.woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href="/geist/webfonts/GeistMono[wght].woff2"
      crossorigin="anonymous"
    />

    <style>
      /* Geist Mono Font Face Declarations */
      @font-face {
        font-family: "Geist Mono";
        src: url("/geist/webfonts/GeistMono[wght].woff2")
          format("woff2-variations");
        font-weight: 100 900;
        font-display: swap;
        font-style: normal;
      }

      @font-face {
        font-family: "Geist Mono";
        src: url("/geist/webfonts/GeistMono-Regular.woff2") format("woff2");
        font-weight: 400;
        font-display: swap;
        font-style: normal;
      }

      @font-face {
        font-family: "Geist Mono";
        src: url("/geist/webfonts/GeistMono-Medium.woff2") format("woff2");
        font-weight: 500;
        font-display: swap;
        font-style: normal;
      }
    </style>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://meaningalignment.org/" />
    <meta property="og:title" content="Meaning Alignment Institute" />
    <meta
      property="og:description"
      content="AI, markets, and democracies with what makes life meaningful"
    />
    <meta property="og:image" content="https://meaningalignment.org/og.png" />

    <!-- Twitter cards -->
    <meta name="twitter:site" content="@meaningalignment" />
    <meta property="twitter:domain" content="meaningalignment.org" />
    <meta property="twitter:url" content="https://meaningalignment.org" />
    <meta name="twitter:title" content="Meaning Alignment Institute" />
    <meta
      name="twitter:description"
      content="AI, markets, and democracies with what makes life meaningful"
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="https://meaningalignment.org/og.png" />

    <!-- Special case blog post styling -->
    <style
      is:global
      define:vars={{ txtColor, bgColor, txtColorDark, bgColorDark }}
    >
      * {
        --fallback-bg-color: #ffffff; /* Default light background color */
        --fallback-txt-color: #1a1818; /* Default light text color */
        color: var(--txtColor, var(--fallback-txt-color));
      }

      html {
        margin: 1.11em;
      }

      body {
        font-family: "Geist Mono", "Courier New", Courier, monospace;
        font-size: 1.23em;
        -webkit-font-smoothing: antialiased;
        background-color: var(--bgColor, var(--fallback-bg-color));
        color: var(--txtColor, var(--fallback-txt-color));
      }

      a {
        text-decoration: none;
      }

      h1 {
        font-size: 3em;
        font-weight: 222;
      }

      h2 {
        font-size: 2em;
        font-weight: 222;
        opacity: 0.55;
      }

      @media screen and (min-width: 555px) {
        html {
          margin: 2em 2.55em;
          padding-bottom: 2em;
        }
      }

      @media (prefers-color-scheme: dark) {
        * {
          --fallback-bg-color-dark: #1a1818; /* Default dark background color */
          --fallback-txt-color-dark: #ffffff; /* Default dark text color */
          color: var(--txtColorDark, var(--fallback-txt-color-dark));
        }

        body {
          background-color: var(--bgColorDark, var(--fallback-bg-color-dark));
          color: var(--txtColorDark, var(--fallback-txt-color-dark));
        }
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
